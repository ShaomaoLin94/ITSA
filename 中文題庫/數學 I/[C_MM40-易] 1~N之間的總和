#include <bits/stdc++.h>
using namespace std;

int main(int argc, char *argv[]) {

    int N;
    while (cin >> N) {
        int sum = ((1 + N) * N) / 2;
        for (int i = 1; i <= N; i++) {
            if (i == 1) {
                cout << i << " ";
            } else {
                cout << "+ " << i << " ";
            }
        }
        cout << "= " << sum << endl;
    }

    return 0;
}
