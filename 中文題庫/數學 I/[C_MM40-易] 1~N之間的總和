#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {

    int N;
    while(scanf("%d", &N)!=EOF){
        int sum = ((1+N)*N)/2;
        for(int i=1; i<=N; i++){               //輸出算式
            if(i==1){              
                printf("%d ", i);   
            }
            else{
                printf("+ %d ", i);
            }
        }
        printf("= %d\n", sum);                //輸出結果
    }



	return 0;
}
